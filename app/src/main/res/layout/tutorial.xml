<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_menu"
    android:duration="@android:integer/config_shortAnimTime"
    android:orientation="vertical"
    android:windowEnterTransition="@android:transition/slide_right"
    tools:context="br.com.virgiliorximenes.oralhealth.FatherActivity">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/logo_margin"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:paddingBottom="@dimen/logo_margin"
        android:scaleType="fitXY"
        android:src="@drawable/oral_health_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_partA"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/text_size_about"
        android:textStyle="bold" />


</LinearLayout>
