<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background_menu"
    tools:context="br.com.virgiliorximenes.oralhealth.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_menu_vertical_margin"
        android:contentDescription="@string/splash_description"
        android:src="@drawable/oral_health_name"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/menuStart"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold|italic"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/text_size_menu"
        android:text="@string/start_game"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_menu_vertical_margin"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_between_images"
            android:src="@drawable/music_button_enabled"
            android:background="@null"
            android:clickable="true"
            android:id="@+id/music_button"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sfx_button_enabled"
            android:background="@null"
            android:clickable="true"
            android:id="@+id/sfx_button"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_between_images"
            android:src="@drawable/about_button"
            android:background="@null"
            android:clickable="true"
            android:id="@+id/about_button"/>
    </LinearLayout>

</LinearLayout>
