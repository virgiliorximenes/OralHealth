<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@android:style/Theme.Wallpaper.NoTitleBar.Fullscreen</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/new_oral_health_logo</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="MenuTheme">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_menu</item>
    </style>

</resources>
