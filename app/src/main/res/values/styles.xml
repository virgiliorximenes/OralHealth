<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@android:style/Theme.Wallpaper.NoTitleBar.Fullscreen</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/new_oral_health_logo</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
        <item name="android:duration">@android:integer/config_shortAnimTime</item>
    </style>

    <style name="MenuTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:duration">@android:integer/config_shortAnimTime</item>
    </style>

    <style name="MenuOption">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_menu</item>
    </style>

</resources>
