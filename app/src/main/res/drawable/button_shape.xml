<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- view background color -->
    <gradient android:startColor="@android:color/holo_blue_dark"
        android:endColor="@android:color/white"
        android:angle="@integer/button_gradient_angle"/>

    <!-- If you want to add some padding -->
    <padding
        android:top="@dimen/button_padding_top_bottom"
        android:bottom="@dimen/button_padding_top_bottom"
        android:left="@dimen/button_padding_left_right"
        android:right="@dimen/button_padding_left_right">
    </padding>

    <!-- Here is the corner radius -->
    <corners
        android:radius="@dimen/button_corners"   >
    </corners>
</shape>